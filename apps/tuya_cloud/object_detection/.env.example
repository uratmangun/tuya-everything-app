# Tuya Product ID (from Tuya IoT Platform)
export TUYA_PRODUCT_ID="your-product-id-here"

# Tuya OpenSDK UUID (from Tuya IoT Platform - Open SDK license)
export TUYA_OPENSDK_UUID="your-uuid-here"

# Tuya OpenSDK AuthKey (from Tuya IoT Platform - Open SDK license)
export TUYA_OPENSDK_AUTHKEY="your-authkey-here"

# TCP Server for Web App Communication
# Set this to your VPS public IP or domain that the DevKit can reach
export TCP_SERVER_HOST="your-vps-ip-or-domain"
export TCP_SERVER_PORT="5000"

# Authentication token (must match the webapp's AUTH_TOKEN)
export TCP_AUTH_TOKEN="your-secret-token-here"

# =============================================================================
# RTSP Tunnel Configuration
# =============================================================================
# The DevKit can tunnel your local RTSP camera to your VPS, allowing
# the VPS to access camera streams that are not publicly accessible.
#
# Flow: [RTSP Camera] <-> [DevKit] <-> [VPS:8554] <-> [FFmpeg/VLC]
# =============================================================================

# Local RTSP camera IP address (on same LAN as DevKit)
export RTSP_CAMERA_HOST="192.168.1.100"

# RTSP camera port (usually 554)
export RTSP_CAMERA_PORT="554"

# VPS hostname/IP for tunnel endpoint (usually same as TCP_SERVER_HOST)
export RTSP_VPS_HOST="your-vps-ip-here"

# VPS port for RTSP tunnel (default: 8554)
export RTSP_VPS_PORT="8554"

# Auto-start tunnel on boot:
# "0" = Manual start (send 'rtsp start' via web app)
# "1" = Auto-start when DevKit boots
export RTSP_TUNNEL_ENABLED="0"
