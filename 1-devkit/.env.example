# Tuya Product ID (from Tuya IoT Platform)
export TUYA_PRODUCT_ID="your-product-id-here"

# Tuya OpenSDK UUID (from Tuya IoT Platform - Open SDK license)
export TUYA_OPENSDK_UUID="your-uuid-here"

# Tuya OpenSDK AuthKey (from Tuya IoT Platform - Open SDK license)
export TUYA_OPENSDK_AUTHKEY="your-authkey-here"

# TCP Server for Web App Communication
# Set this to your VPS public IP or domain that the DevKit can reach
export TCP_SERVER_HOST="your-vps-ip-or-domain"
export TCP_SERVER_PORT="5000"

# Authentication token (must match the webapp's AUTH_TOKEN)
export TCP_AUTH_TOKEN="your-secret-token-here"


